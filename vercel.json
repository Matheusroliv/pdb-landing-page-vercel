{
  "installCommand": "yarn install --ignore-platform",
  "buildCommand": "yarn run build",

  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/portal-landing-page/browser"
      }
    }
  ],

  "routes": [
    { "handle": "filesystem" },
    { "src": "/[^\\.#?]+(?:/[^\\.#?]+)*", "dest": "/index.html" }
  ]
}

{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/portal-landing-page" }
    }
  ],

  "installCommand": "yarn install --ignore-platform",
  "buildCommand": "yarn run build",

  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
